{
  "name": "examples",
  "version": "1.0.0",
  "description": "Implementation of various concepts",
  "main": "index.html",
  "scripts": {
    "clean": "rm -rf build/*",
    "postbuild:html": "npm run html-pretty",
    "html-minifier": "html-minifier --collapse-whitespace --remove-comments --use-short-doctype --minify-css true --input-dir build --output-dir build",
    "html-pretty": "html-beautify build/**/*.html",
    "build:js": "copyfiles --flat src/assets/js/*.js build/assets/js/tmp",
    "postbuild:js": "npm run lint:fix && npm run uglifyjs",
    "lint": "eslint build/assets/js/tmp/*.js --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "uglifyjs": "uglifyjs build/assets/js/tmp/*.js --compress --mangle -o build/assets/js/main.min.js --source-map \"filename='main.min.js.map'\" ",
    "postuglifyjs": "rm -rf build/assets/js/tmp",
    "postbuild:img": "npm run imagemin",
    "imagemin": "imagemin src/assets/img/* --out-dir=build/assets/img",
    "watch:css": "onchange \"src/assets/css\" -- npm run build:css",
    "watch:js": "onchange \"src/assets/js\" -- npm run build:js",
    "watch:img": "onchange \"src/assets/img\" -- npm run build:img",
    "watch:html": "onchange \"src/pages/*.njk\" -- npm run build",
    "watch:html1": "onchange \"src/*.njk\" -- npm run build",
    "watch": "run-p serve watch:*",
    "serve": "browser-sync start --server \"build\" --files \"build\"",
    "prebuild": "npm run clean -s",
    "build": "run-p build:*",
    "build:html": "nunjucks-to-html src/pages/*.njk --dest build --ext .html --flatten",
    "build:img": "copyfiles --flat src/assets/img/*.* build/assets/img",
    "build:css": "postcss src/assets/css/style.css --verbose --config build --output build/assets/css/style.min.css"
  },
  "author": "RN Kushwaha",
  "license": "MIT",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^3.1.3",
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.5",
    "browser-sync": "^2.26.14",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.2",
    "eslint": "^7.26.0",
    "html-minifier": "^4.0.0",
    "imagemin": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.3",
    "nunjucks-to-html": "^1.0.1",
    "onchange": "^7.1.0",
    "pretty": "^2.0.0",
    "tailwindcss": "^2.1.2",
    "uglify-js": "^3.13.6"
  }
}
